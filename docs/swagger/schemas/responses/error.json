{
  "type": "object",
  "description": "Standard error response",
  "properties": {
    "error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "Error code",
          "example": "UNAUTHORIZED"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message",
          "example": "Invalid or missing API key"
        }
      },
      "required": ["code", "message"]
    }
  },
  "required": ["error"]
}
